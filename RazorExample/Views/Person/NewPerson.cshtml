@model RazorExample.Models.Person

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                Add New Person (HTML Helpers) <br />
                <small>Please enter information for the new person.</small>
            </h3>
        </div>
    </div>
    @using (Html.BeginForm("NewPerson", "Person", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-6">
                @Html.ValidationSummary(false)
                <div class="form-group">
                    @Html.LabelFor(x => x.FirstName, "First Name")
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FirstName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.LastName, "Last Name")
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.LastName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Organization, "Organization")
                    @Html.TextBoxFor(x => x.Organization, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Organization)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Phone)
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Phone)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                
            </div>
            
        </div>
       
        
        <div class="row">
            <div class="col-md-6">
                <h3>Address</h3>
                <div class="row">
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(x => x.HomeAddress.Street)
                        @Html.TextBoxFor(x => x.HomeAddress.Street, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(x => x.HomeAddress.City)
                        @Html.TextBoxFor(x => x.HomeAddress.City, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(x => x.HomeAddress.State)
                        @Html.TextBoxFor(x => x.HomeAddress.State, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(x => x.HomeAddress.Zip)
                        @Html.TextBoxFor(x => x.HomeAddress.Zip, new { @class = "form-control" })
                    </div>
                </div>
                <input type="submit" class="pull-right btn btn-primary" />
            </div>
        </div>
   
    }
    <br />
    @section Footer {
        <p>Special Footer added just for this page.</p>
    }
